    },

    "BaseTree" : {
        "lineColor" : null,
        "views": {
            "collapsedSign"   : { "@zebkit.draw.Picture": [ "%{zebkit.ui.pictures.zebkit}", 61 ,20 ,16, 14, true ] },
            "expandedSign"    : { "@zebkit.draw.Picture": [ "%{zebkit.ui.pictures.zebkit}", 49 ,34, 16, 14, true ] },
            "leafSign"        : { "@zebkit.draw.Picture": [ "%{zebkit.ui.pictures.zebkit}", 49 ,20 ,16, 14, true ] },

